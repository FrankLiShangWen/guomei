.product_count{
	position: absolute;
    top: 8px;
    text-decoration: none;
    background: #fff;
    padding: 4px 8px;
    border-radius: 50%;
    font-weight: bold;
    color: #f00;
}
#header{
	position: fixed;
    top: 0;
    left: 50%;
    transform: translate(-50%,0);
    background: #fff;
}
.shopping_car{
	position:relative;
}


